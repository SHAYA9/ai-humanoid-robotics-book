# Environment Configuration for RAG Chatbot
# Copy this file to .env and fill in your actual values

# ==================== FRONTEND ====================
FRONTEND_URL=https://shaya9.github.io/ai-humanoid-robotics-book
VITE_API_URL=http://localhost:8000

# ==================== GEMINI API ====================
GEMINI_API_KEY=your_gemini_api_key_here

# ==================== QDRANT VECTOR DATABASE ====================
# Free tier: https://cloud.qdrant.io/
QDRANT_URL=https://your-qdrant-cluster-url.com
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=ai-humanoid-robotics-book

# ==================== NEON POSTGRESQL ====================
# Free tier: https://neon.tech/
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require

# ==================== MYSQL (Optional - for legacy support) ====================
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=chatbot_db

# ==================== SERVER CONFIGURATION ====================
PORT=8000
DEBUG=True
